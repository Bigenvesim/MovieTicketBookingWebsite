<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/afterLogin/*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>logout.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieManagedBean.displayMovieInfo()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/movieInfo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.displayDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/userDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Client Only</description>
        <from-view-id>/client/*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>logout.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.displayDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/userDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Admin Only</description>
        <from-view-id>/admin/*</from-view-id>
         <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>logout.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.displayDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/userDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>From Home Page</description>
        <from-view-id>/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.displayMovieInfo()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/movieInfo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Sign up</description>
        <from-view-id>/signupPage.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.addUser()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/signupSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.addUser()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/signupFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Update User Details</description>
        <from-view-id>/afterLogin/updateDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.editDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/updateDetailsSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.editDetails()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/afterLogin/updateDetailsFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Change Password</description>
        <from-view-id>/afterLogin/updatePassword.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.editPassword()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/updatePasswordSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.editPassword()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/afterLogin/updatePasswordFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Request Recover Password</description>
        <from-view-id>/changePasswordRequest.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.checkUserEmail()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/changePasswordValidateCode.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.checkUserEmail()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/changePasswordRequestFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Validate Recovery Code</description>
        <from-view-id>/changePasswordValidateCode.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.checkRecoveryCode()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/changePassword.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.checkRecoveryCode()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/changePasswordValidateCodeFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Recover Password</description>
        <from-view-id>/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.editPassword()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/changePasswordSuccess.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/afterLogin/movieInfo.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.checkMovie()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/editMovieInfo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{cartManagedBean.displayItem()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/client/bookTicket.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/editMovieInfo.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.editDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/editMovieInfoSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieManagedBean.editDetails()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/editMovieInfoFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/editMovieInfoSuccess.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.displayMovieInfo()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/movieInfo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/findUser.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.displayDetails()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/afterLogin/userDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/addMovie.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.addMovie()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/addMovieSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieManagedBean.addMovie()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/addMovieFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/client/bookTicket.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{cartManagedBean.addItemtoCart()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/client/addItemSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{cartManagedBean.addItemtoCart()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/client/addItemFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/client/editCart.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{cartManagedBean.removeItem()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/client/deleteSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{cartManagedBean.removeItem()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/client/deleteFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/deleteMovie.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieManagedBean.deleteMovie()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/deleteMovieSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{movieManagedBean.deleteMovie()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/deleteMovieFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/client/checkYourCart.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{cartManagedBean.confirm()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/client/confirmPage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{cartManagedBean.confirm()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/client/confirmFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/createAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManagedBean.addAdmin()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/createAdminSuccess.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userManagedBean.addAdmin()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/admin/createAdminFailure.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
